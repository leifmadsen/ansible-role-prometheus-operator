apiVersion: v1
kind: ConfigMap
metadata:
  name: grafana-datasources
data:
  prometheus.yaml: |+
    datasources:
     - name: prometheus
       type: prometheus
       access: proxy
       org_id: 1
       url: http://prometheus-{{ promops_deploy.name }}.{{ promops_deploy.namespace }}.svc:9090
       version: 1
       editable: false

